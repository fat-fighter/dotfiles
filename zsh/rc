export ZSH=/home/fat-fighter/.oh-my-zsh

ZSH_THEME="bira"

COMPLETION_WAITING_DOTS="true"

plugins=(git python pip virtualenv screen)

export ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE="fg=cyan"

export TERM="xterm-256color"

# Defining standard paths
export UTILITIES="$HOME/utilities"
export SOFTWARE="$HOME/software"
export DOTFILES="$HOME/dotfiles"

# Sourcing zsh plugins
source $ZSH/oh-my-zsh.sh
source $HOME/.zsh/zsh-autosuggestions/zsh-autosuggestions.zsh
source $HOME/.zsh/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# Setting PATH Variable
export PATH=$(getconf PATH)
export PATH="/usr/local/cuda-9.0/bin:$PATH"
export PATH="$HOME/.local/bin:$PATH"

export LD_LIBRARY_PATH="/usr/local/cuda-9.1/lib64:/usr/lib/nvidia-384:$LD_LIBRARY_PATH"

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
[ -f ~/.zsh_aliases ] && source ~/.zsh_aliases

if [[ $TERM == xterm-termite ]]; then
    . /etc/profile.d/vte.sh
    __vte_osc7
fi

function msend {
	comm="m \"Gurpreet Singh\" ${@}"
	comm="'$comm'"
	echo $comm

	messer --command=$comm
}

function fr {
	for file in *; do
		mv $file `echo $file | sed 's/[ _]/-/g' | tr A-Z a-z`
	done
}


function compr {
	g++ $1 -o m; ./m
}


function lcr {
	if ! [[ $1 =~ ^\s*$ ]]; then
		google-chrome-stable --app=file://` realpath $1 `
	fi
}

function chromeapp {
	if ! [[ $1 =~ ^\s*$ ]]; then
		google-chrome-stable --app=$1
	fi
}

function ctex {
	if ! [[ $1 =~ ^\s*$ ]]; then
		pdflatex -interaction=errorstop $1.tex
		bibtex $1
		pdflatex -interaction=batchmode $1.tex
		pdflatex -interaction=batchmode $1.tex
	fi
}

function ginit {
	ln ~/.gitignore ./
	git init
	if ! [[ $1 =~ ^\s*$ ]]; then
		git remote add origin $1
	fi
}

function count {
	if [[ -f $1 ]]; then
		cat $1 | wc -l
	else
		echo "File not found"
	fi
}

function pg {
	git clone https://aur.archlinux.org/$1.git
	cd $1
	makepkg -Acs --noconfirm
	if ls $1*.tar.xz 1> /dev/null 2>&1; then
		sudo pacman -U --noconfirm $1*.tar.xz
		cd ../
		rm -rf $1
	else
    	echo "There was some error in downloading the package"
	fi
}

function qcd () {
	folders=(
		~/
		~/iitk
		~/iitk/sem7
		~/scribes
		~/projects
		~/projects/machine-learning
		~/books
		~/dropbox
		~/utilities
		~/dotfiles
	)
    dir=$(find $folders -type d -not -path '*/\.*' -maxdepth 1 | fzf)
    cd $dir
    zle reset-prompt
}

zle -N qcd_widget qcd
bindkey "^q" qcd_widget
