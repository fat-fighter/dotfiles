# General
alias open="xdg-open"
alias j="jump"

# Pacman controls
alias pi="sudo pacman -S --noconfirm"
alias pd="sudo pacman -R --noconfirm"
alias pu="sudo pacman -Syu --noconfirm"
alias pc="sudo paccache -r"
alias pk="gpg --recv-key"

# Ranger
alias r="ranger"

# LazyGit
alias lg="lazygit"

# Listing
alias l="$UTILITIES/dls"
alias ltl="exa -lhT --git --level 1"

alias lt="exa -aT --git --level 3"
alias ltl="exa -lhT --git --level 3"

alias dots="cd $DOTFILES"
alias utils="cd $UTILITIES"

# Terminology
alias tp="typop"
alias tc="tycat"
alias tq="tyq"

# Proxy
alias proxy=". $UTILITIES/general/proxy/global-proxy"
alias pipp="$UTILITIES/general/proxy/pip-proxy"

# Tor Browser
alias tor="$SOFTWARE/tor/start-tor-browser --detach"
