[colors]

background-dark = #88000000
background-light = #993a3a3a

foreground = #ffffff

alert = #d68787

##############################
[bar/bot]

bottom = true
width = 100%
height = 25
offset-x = 0
offset-y = 0

border-top-size = 3
border-top-color = ${colors.background-light}
background = ${colors.background-dark}
foreground = ${colors.foreground}

spacing = 0
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = "DejaVuSansMono Nerd Font:size=9;2"
font-1 = "DejaVuSansMono Nerd Font:size=11;2"

modules-left = i3
modules-right = xkeyboard volume wlan battery date

line-size = 0

##############################
[module/i3]

type = internal/i3
format = <label-state> %{T2}<label-mode>%{T-}
index-sort = true

strip-wsnumbers = true

label-mode-foreground = ${colors.foreground}
label-mode-background = #707a5a
label-mode-font = 1
label-mode-padding = 2

enable-scroll = false

label-focused-font = 2
label-unfocused-font = 2
label-urgent-font = 2
label-visible-font = 2

label-urgent =   %name%
label-visible =   %name%

label-focused-background = ${colors.background-light}

label-focused-foreground = ${colors.foreground}
label-urgent-foreground = ${colors.alert}
label-visible-foreground = ${colors.background-light}

label-focused-padding-left = 2
label-focused-padding-right = 3
label-unfocused-padding-left = 2
label-unfocused-padding-right = 3
label-visible-padding-left = 2
label-visible-padding-right = 3

##############################
[module/date]

type = internal/date
interval = 5

date = %B %d

time = %l:%M %p

format-prefix-foreground = ${colors.foreground}

label = %date%, %time%

format-padding = 3

format-background = ${colors.background-light}
format-foreground = ${colors.foreground}

##############################
[module/battery]

type = internal/battery
battery = BAT1
adapter = AC
full-at = 100

format-charging = "<animation-charging> <label-charging> "
format-discharging = "<ramp-capacity> <label-discharging> "

format-charging-padding = 2
format-discharging-padding = 2

label-charging = %percentage%%
label-discharging = %percentage%%

ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.alert}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.alert}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

animation-charging-framerate = 750

##############################
[module/volume]

type = custom/script

exec = volume get
click-left = volume mute >/dev/null 2>&1 &
click-right = pavucontrol >/dev/null 2>&1 &

label = "%output%"
tail = true
interval = 0

format-padding = 2

##############################
[module/wlan]

type = internal/network
interface = wlp8s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid%

format-connected-padding = 1

format-disconnected =

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground}

##############################
[module/xkeyboard]

type = internal/xkeyboard

label-layout = 

label-indicator-foreground = #ffffff
label-indicator-background = #707a5a

label-indicator-padding = 1
label-indicator-margin-right = 1
